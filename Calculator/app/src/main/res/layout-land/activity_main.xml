<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/result"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/button10"
            android:id="@+id/button0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button10" android:minWidth="48dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button10"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button10"
            android:minWidth="48dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button2"
            android:minWidth="48dp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4" app:layout_constraintStart_toStartOf="@+id/button7"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button7" android:minWidth="48dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button4"
            android:minWidth="48dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5" android:minWidth="48dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7" app:layout_constraintStart_toStartOf="@+id/newNumber"
            app:layout_constraintTop_toBottomOf="@+id/newNumber"
            android:layout_marginTop="8dp" android:minWidth="48dp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8" app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button7"
            android:minWidth="48dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9" app:layout_constraintStart_toEndOf="@+id/button8"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button8"
            android:minWidth="48dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10" app:layout_constraintStart_toStartOf="@+id/button4"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button4" android:minWidth="48dp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            android:minWidth="48dp"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiply" app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            android:minWidth="48dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAdd" app:layout_constraintStart_toEndOf="@+id/buttonEqual"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/buttonEqual"
            android:minWidth="48dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonMinus"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3" android:layout_marginStart="8dp"
            android:minWidth="48dp"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEqual" app:layout_constraintStart_toEndOf="@+id/buttonDecimal"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/buttonDecimal"
            android:minWidth="48dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDecimal" app:layout_constraintStart_toEndOf="@+id/button0"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button0"
            android:minWidth="48dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/newNumber"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/result"
            android:layout_marginEnd="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/result"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operation" app:layout_constraintEnd_toStartOf="@id/button7"
            android:layout_marginEnd="8dp" app:layout_constraintBaseline_toBaselineOf="@id/button7"
            android:textSize="18sp" tools:text="+"/>
</android.support.constraint.ConstraintLayout>